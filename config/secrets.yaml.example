# Secrets Configuration Template
# IMPORTANT: Copy this file to secrets.yaml and fill in actual values
# NEVER commit secrets.yaml to Git (it's in .gitignore)

# API Keys
api_keys:
  admin_key: "your-admin-api-key-here"
  user_key: "your-user-api-key-here"
  
# Database Credentials
database:
  postgresql:
    password: "your-postgres-password"
    
# Email Configuration (for alerts)
email:
  smtp_server: "smtp.gmail.com"
  smtp_port: 587
  sender_email: "your-email@example.com"
  sender_password: "your-app-specific-password"
  
# Slack Configuration (for alerts)
slack:
  webhook_url: "https://hooks.slack.com/services/YOUR/WEBHOOK/URL"
  channel: "#ml-alerts"
  
# Cloud Storage (if using AWS/GCP/Azure)
cloud:
  aws:
    access_key_id: "your-aws-access-key"
    secret_access_key: "your-aws-secret-key"
    region: "us-east-1"
    s3_bucket: "your-bucket-name"
  
  gcp:
    project_id: "your-project-id"
    credentials_path: "path/to/service-account.json"
  
  azure:
    storage_account_name: "your-storage-account"
    storage_account_key: "your-storage-key"

# JWT Secret (for authentication)
jwt:
  secret_key: "your-super-secret-jwt-key-change-this"
  algorithm: "HS256"
  access_token_expire_minutes: 30

# MLflow Tracking (if using remote server)
mlflow:
  tracking_username: "mlflow-user"
  tracking_password: "mlflow-password"

# Monitoring
monitoring:
  grafana:
    admin_password: "grafana-admin-password"